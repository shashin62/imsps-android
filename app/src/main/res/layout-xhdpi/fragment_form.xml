         android:textColorHint="@color/hint_register"
         android:layout_margin="5dp"
         android:background="@color/form_background" >


     </android.support.design.widget.TextInputLayout>-->

    <com.proschoolonline.components.AppEditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/hint_register"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/rounded_corner"
        customfont:fontName="OpenSans-Regular.ttf" />

    <!--<android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRegister"
        android:layout_margin="5dp"
        android:background="@color/form_background"
        android:textColorHint="@color/hint_register">


    </android.support.design.widget.TextInputLayout>-->

    <com.proschoolonline.components.AppEditText
        android:id="@+id/edtPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/hint_register"
        android:digits="0123456789"
        android:hint="@string/phone"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/rounded_corner"
        customfont:fontName="OpenSans-Regular.ttf" />

    <!--<android.support.design.widget.TextInputLayout
